h1 Index/Slice Test

alias context.my.team as team

h2 Scalar Tests

p Alice == @{team[0].first_name}

for member in team[0:1]
    p Alice == @{member.first_name}

p Bob == @{team[1].first_name}

for member in team[1:2]
    p Bob == @{member.first_name}

p Eddie == @{team[-1].first_name}

p
    ~ (Eddie)==(
    for member in team[-1:5]
        @{member.first_name}
    ~)

h2 List Tests

p Alice Bob Charlie == @{team[0].first_name} @{team[1].first_name} @{team[2].first_name}

p
    ~ (AliceBobCharlie)==(
    for member in team[0:3] 
        @{member.first_name}
    ~)
